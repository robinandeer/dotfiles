[user]
  name = Robin Andeer
  email = robin.andeer@gmail.com

[core]
  # config line endings correctly (Linux/Mac)
  autocrlf = input

[color]
  ui = auto

[color "branch"]
  current = yellow reverse
  local = yellow
  remote = green
  plain = red

[color "diff"]
  meta = yellow bold
  frag = magenta bold
  old = red bold
  new = green bold

[color "status"]
  added = yellow
  changed = green
  untracked = cyan

[merge]
  # add list of merged commits to autogenerated commit message
  log = true

[credential]
  helper = osxkeychain

[branch]
  # all new branches fetch+rebase, not merge
  autosetuprebase = always

[rerere]
  # record+reuse merge conflict resolutions
  enabled = true

[push]
  # only push active branch (default in 2.0)
  default = simple

[pull]
  # skip nonsense merge commit
  rebase = true

[alias]
  ls = ls-files
  tags = tag -l
  # status in minimal silent mode
  s = "status -s"

  # commit all with message
  ca = commit -am

  # create and switch to new branch ("git new branch branchname...")
  nb = checkout -b

  # show merge tree + commits info
  lg = "git log --graph --pretty=format:'%Cred%h%Creset %C(yellow)%an%d%Creset %s %Cgreen(%cr)%Creset' --date=relative --abbrev-commit"
